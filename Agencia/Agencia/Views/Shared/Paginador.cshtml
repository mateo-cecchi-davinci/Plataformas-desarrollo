@model Agencia.Models.Paginador

<div class="container">
    @if (Model.total > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.pagina > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="1">Inicio</a>
                </li>
                <li>
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.pagina - 1)">Anterior</a>
                </li>
            }

            @for (var pge = Model.inicio; pge <= Model.fin; pge++)
            {
                <li class="page-item @(pge == Model.pagina ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                </li>
            }

            @if (Model.pagina < Model.total)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.pagina + 1)">Siguiente</a>
                </li>
                <li>
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.total)">Ultimo</a>
                </li>
            }
        </ul>
    }
</div>