@model Agencia.Models.Hotel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-3">Eliminar hotel</h1>

<h3>¿Está seguro de eliminar este hotel?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ubicación:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ubicacion.nombre)
        </dd>
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            Descripción:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.imagen))
            {
                <img src="~/@Model.imagen" alt="Imagen del hotel" class="img-fluid" />
            }
            else
            {
                <img src="~/images/noImageFound.png" alt="Imagen no encontrada" class="img-fluid" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="text-decoration-none">Volver</a>
    </form>
</div>
