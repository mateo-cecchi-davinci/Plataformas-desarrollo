@model Agencia.Models.Hotel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Hotel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ubicacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ubicacion.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.habitaciones_chicas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.habitaciones_chicas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.habitaciones_medianas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.habitaciones_medianas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.habitaciones_grandes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.habitaciones_grandes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.costo_hab_chicas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.costo_hab_chicas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.costo_hab_medianas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.costo_hab_medianas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.costo_hab_grandes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.costo_hab_grandes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.imagen))
            {
                <img src="~/@Model.imagen" alt="Imagen del hotel" class="img-fluid" />
            }
            else
            {
                <img src="~/images/noImageFound.jpg" alt="Imagen no encontrada" class="img-fluid" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
