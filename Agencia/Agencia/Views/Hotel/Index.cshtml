@model IEnumerable<Agencia.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center my-5">
    <h1>Hoteles</h1>
    <p>
        <a asp-action="Create" type="button" class="btn btn-success">Crear</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Ubicación
            </th>
            <th>
                Nombre
            </th>
            <th>
                Descripción
            </th>
            <th>
                Imagen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ubicacion.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imagen)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id" class="text-decoration-none">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@item.id" class="text-decoration-none">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="text-decoration-none">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
