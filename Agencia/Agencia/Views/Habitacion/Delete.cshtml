@model Agencia.Models.Habitacion

@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-3">Eliminar habitación</h1>

<h3>¿Está seguro de eliminar este habitación?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Capacidad:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.capacidad)
        </dd>
        <dt class="col-sm-2">
            Costo:
        </dt>
        <dd class="col-sm-10">
            $ @Html.DisplayFor(model => model.costo)
        </dd>
        <dt class="col-sm-2">
            Hotel:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hotel.nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="text-decoration-none">Volver</a>
    </form>
</div>
