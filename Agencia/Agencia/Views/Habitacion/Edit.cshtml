@model Agencia.Models.Habitacion

@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-3">Editar habitación</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group mb-3">
                <label asp-for="hotel_fk" class="control-label">Hotel</label>
                <select asp-for="hotel_fk" class="form-control" asp-items="ViewBag.hotel_fk"></select>
                <span asp-validation-for="hotel_fk" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="capacidad" class="control-label">Capacidad</label>
                <select required asp-for="capacidad" class="form-control">
                    <option value="2">Dos personas</option>
                    <option value="4">Cuatro personas</option>
                    <option value="8">Ocho personas</option>
                </select>
                <span asp-validation-for="capacidad" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="costo" class="control-label">Costo</label>
                <input required asp-for="costo" class="form-control" />
                <span asp-validation-for="costo" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center">
                <input required type="submit" value="Guardar" class="btn btn-primary me-2" />
                <a asp-action="Index" class="text-decoration-none">Volver</a>
            </div>
        </form>
    </div>
</div>

