@model Agencia.Models.Habitacion

@{
    ViewData["Title"] = "Create";
}

<h1 class="my-3">Crear habitaciones</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="hotel_fk" class="control-label">Hotel</label>
                <select asp-for="hotel_fk" class="form-control" asp-items="ViewBag.hotel_fk">
                    <option value="">Seleccione el hotel</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Cantidad de habitaciones</label>
                <input required type="number" name="cantidad" class="form-control" value="1" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="capacidad" class="control-label">Capacidad</label>
                <select required asp-for="capacidad" class="form-control">
                    <option value="2">Dos personas</option>
                    <option value="4">Cuatro personas</option>
                    <option value="8">Ocho personas</option>
                </select>
                <span asp-validation-for="capacidad" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="costo" class="control-label">Costo</label>
                <input required asp-for="costo" class="form-control" value="0"/>
                <span asp-validation-for="costo" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center">
                <input type="submit" value="Crear" class="btn btn-primary me-2" />
                <a asp-action="Index" class="text-decoration-none">Volver</a>
            </div>
        </form>
    </div>
</div>

