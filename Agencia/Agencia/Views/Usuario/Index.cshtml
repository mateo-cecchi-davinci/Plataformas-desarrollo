@model IEnumerable<Agencia.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center my-5">
    <h1>Usuarios</h1>
    <p>
        <a asp-action="Create" type="button" class="btn btn-success">Crear</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Dni
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Mail
            </th>
            <th>
                Intentos fallidos
            </th>
            <th>
                Estado
            </th>
            <th>
                Credito
            </th>
            <th>
                Rol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.intentosFallidos)
                </td>
                <td>
                    @if (item.bloqueado)
                    {
                        <text>Bloqueado</text>
                    }
                    else
                    {
                        <text>Activo</text>
                    }
                </td>
                <td class="text-nowrap">
                    $ @item.credito
                </td>
                <td>
                    @if (item.isAdmin)
                    {
                        <text>Administrador</text>
                    }
                    else
                    {
                        <text>Común</text>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id" class="text-decoration-none">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@item.id" class="text-decoration-none">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="text-decoration-none">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
