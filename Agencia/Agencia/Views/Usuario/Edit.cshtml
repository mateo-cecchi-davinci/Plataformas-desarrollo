@model Agencia.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-3">Editar usuario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input required type="hidden" asp-for="id" />
            <div class="form-group mb-3">
                <label asp-for="dni" class="control-label">Dni</label>
                <input required asp-for="dni" class="form-control" />
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="nombre" class="control-label">Nombre</label>
                <input required asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="apellido" class="control-label">Apellido</label>
                <input required asp-for="apellido" class="form-control" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="mail" class="control-label">Correo</label>
                <input required asp-for="mail" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="clave" class="control-label">Clave</label>
                <input required asp-for="clave" type="password" class="form-control" value="@Model.clave" />
                <span asp-validation-for="clave" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="intentosFallidos" class="control-label">Intentos fallidos</label>
                <input required asp-for="intentosFallidos" class="form-control" value="0" />
                <span asp-validation-for="intentosFallidos" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="bloqueado" /> Bloqueado
                </label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="credito" class="control-label">Crédito</label>
                <input required asp-for="credito" class="form-control" value="0" />
                <span asp-validation-for="credito" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isAdmin" /> Administrador
                </label>
            </div>
            <div class="form-group d-flex align-items-center">
                <input required type="submit" value="Guardar" class="btn btn-primary me-2" />
                <a asp-action="Index" class="text-decoration-none">Volver</a>
            </div>
        </form>
    </div>
</div>

