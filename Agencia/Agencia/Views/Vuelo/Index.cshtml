@model IEnumerable<Agencia.Models.Vuelo>

@{
    ViewData["Title"] = "Index";

    int pageNo = 0;

    if (ViewBag.pager != null)
    {
        pageNo = ViewBag.pager.pagina;
    }
}

<div class="d-flex justify-content-between align-items-center my-5">
    <h1>Vuelos</h1>
    <p>
        <a asp-action="Create" type="button" class="btn btn-success">Crear</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Origen
            </th>
            <th>
                Destino
            </th>
            <th>
                Capacidad
            </th>
            <th>
                Asientos vendidos
            </th>
            <th>
                Costo
            </th>
            <th>
                Fecha
            </th>
            <th>
                Aerolínea
            </th>
            <th>
                Modelo de avión
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.origen.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.destino.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.capacidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vendido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.costo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aerolinea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.avion)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id" class="text-decoration-none">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@item.id" class="text-decoration-none">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="text-decoration-none">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="Paginador" model="@ViewBag.pager" />