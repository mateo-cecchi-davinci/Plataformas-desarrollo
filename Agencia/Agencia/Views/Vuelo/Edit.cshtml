@model Agencia.Models.Vuelo

@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-3">Editar habitación</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="vendido" value="0" />
            <div class="form-group mb-3">
                <label asp-for="capacidad" class="control-label">Capacidad</label>
                <input required asp-for="capacidad" class="form-control" value="0" />
                <span asp-validation-for="capacidad" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="costo" class="control-label">Costo</label>
                <input required asp-for="costo" class="form-control" value="0" />
                <span asp-validation-for="costo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="fecha" class="control-label">Fecha</label>
                <input required asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="aerolinea" class="control-label">Aerolínea</label>
                <input required asp-for="aerolinea" class="form-control" />
                <span asp-validation-for="aerolinea" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="avion" class="control-label">Modelo de avión</label>
                <input required asp-for="avion" class="form-control" />
                <span asp-validation-for="avion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="origen_fk" class="control-label">Origen</label>
                <select required asp-for="origen_fk" class="form-control" asp-items="ViewBag.origen_fk"></select>
                <span asp-validation-for="origen_fk" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="destino_fk" class="control-label">Destino</label>
                <select required asp-for="destino_fk" class="form-control" asp-items="ViewBag.destino_fk"></select>
                <span asp-validation-for="destino_fk" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center">
                <input required type="submit" value="Guardar" class="btn btn-primary me-2" />
                <a asp-action="Index" class="text-decoration-none">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
